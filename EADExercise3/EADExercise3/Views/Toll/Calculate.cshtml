@model EADExercise3.Models.Vechicle

@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate</h1>

<h4>Vechicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleType" class="control-label"></label>
                <!--<input asp-for="VehicleType" class="form-control" />-->
                @Html.DropDownList("VehicleType")
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasETag" /> @Html.DisplayNameFor(model => model.HasETag)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Charge" class="control-label"></label>
                <input asp-for="Charge" class="form-control" />
                <span asp-validation-for="Charge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <h1>Your result is @ViewBag.MyResult</h1>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
